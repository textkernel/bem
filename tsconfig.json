{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declarationDir": "./dist/dts"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ]
}
