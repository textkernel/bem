{
    "name": "@textkernel/bem",
    "buildParams": {
        "libraryName": "bem"
    },
    "version": "1.0.0",
    "description": "Automatically generates list of classnames based on its props/state for your React component.",
    "main": "dist/bem.js",
    "scripts": {
        "build": "webpack --config ./etc/build/webpack.dev.config.js",
        "build:prod": "webpack --config ./etc/build/webpack.prod.config.js",
        "size": "npm run build:prod && size-limit",
        "lint": "npm run lint:ci -- --fix",
        "lint:ci": "eslint .",
        "test": "jest --config etc/test/jest.config.js",
        "test:coverage": "jest --config etc/test/jest.config.js --coverage",
        "prepublishOnly": "npm test && npm run lint:ci && npm run build:prod"
    },
    "size-limit": [
        {
            "webpack": false,
            "path": "dist/*.js"
        }
    ],
    "files": [
        "/dist"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "npm run test && npm run lint:ci"
        }
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:textkernel/bem.git"
    },
    "author": "Textkernel B.V. <open-source@textkernel.nl>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/textkernel/bem/issues"
    },
    "homepage": "https://github.com/textkernel/bem#readme",
    "dependencies": {},
    "peerDependencies": {
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "prop-types": "^15.7.2"
    },
    "devDependencies": {
        "@babel/cli": "7.4.4",
        "@babel/core": "7.4.5",
        "@babel/plugin-proposal-class-properties": "7.4.4",
        "@babel/polyfill": "7.4.4",
        "@babel/preset-env": "7.4.5",
        "@babel/preset-react": "7.0.0",
        "babel-core": "7.0.0-bridge.0",
        "babel-eslint": "10.0.1",
        "babel-jest": "24.8.0",
        "babel-loader": "8.0.6",
        "coveralls": "3.0.3",
        "enzyme": "3.9.0",
        "enzyme-adapter-react-16": "1.13.2",
        "enzyme-to-json": "3.3.5",
        "eslint": "5.16.0",
        "eslint-config-airbnb": "17.1.0",
        "eslint-config-prettier": "4.3.0",
        "eslint-loader": "2.1.2",
        "eslint-plugin-import": "2.17.3",
        "eslint-plugin-jsx-a11y": "6.2.1",
        "eslint-plugin-prettier": "3.1.0",
        "eslint-plugin-react": "7.13.0",
        "husky": "2.3.0",
        "identity-obj-proxy": "3.0.0",
        "jest": "24.8.0",
        "prettier": "1.17.1",
        "react": "16.8.6",
        "react-dom": "16.8.6",
        "size-limit": "1.3.5",
        "terser-webpack-plugin": "1.3.0",
        "webpack": "4.32.2",
        "webpack-cli": "3.3.2",
        "webpack-dev-server": "3.4.1",
        "webpack-merge": "4.2.1"
    }
}
